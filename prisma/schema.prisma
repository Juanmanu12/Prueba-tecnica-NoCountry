generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String    @id @default(uuid())
  email     String    @unique
  password  String
  name      String
  role      Role      
  type      Type      @default(USER)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

enum Role {
  FULLSTACK
  FRONTEND
  BACKEND
  UXUI
  QA
  PM
  DATASCIENCE
  DATAANALYST
}

enum Type {
  USER
  ADMIN
}

model Chat {
  id        String    @id @default(uuid())
  name      String?       
  type      String
  createdChats Chat[] @relation("ChatCreator")
}

model Message {
  id        String    @id @defaul(uuid())
  text      String
}
